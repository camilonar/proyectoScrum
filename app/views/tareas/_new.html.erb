<div id="modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<header class="major">
					<h2>Nueva Tarea</h2>
				</header>
			</div>
			<section id="one"  style="background-color:#e3e3e9">
				<div class="modal-body">
					<%= form_for :tarea,:url => url_for(:controller => 'tareas', :action => 'create'),:html => { :multipart => true, id:"tarea" } do |f| %>
					<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
					<div class="contact_form" style="text-align:center">  
						<div class="hidden_element">
							<%=f.text_field :sprint_id, value:@id  %>
							<% if @historia_id != nil %>
							<%=f.text_field :historiausuario_id, value:@historia_id  %>
							<% end %>
						</div>
						<%= f.text_field :Asunto, autofocus: true ,placeholder:"Asunto de la tarea" ,:required => true, style:"background-color:white;" , class:"item" %>
						<br>
						<%= f.text_area :Descripcion, rows:3, autofocus: true ,placeholder:"DescripciÃ³n" ,:required => true, style:"background-color:white;" , class:"item" %>
						<br>
						<%= f.text_field :Estimacion, autofocus: true ,placeholder:"EstimaciÃ³n" ,:required => true, style:"background-color:white;" , class:"item" %>
						<br>
						<%lista1=["Nueva","En Proceso", "Test", "Terminada"]%>
 							<%=f.label :Estado, "Estado: "%> <%=f.select :Estado, lista1, :required => true, style:"width: 50%;"%>
						
						
					</div>    
					<div class="modal-footer">
						<div class="actions">
							<%= button_to tarea_create_path(:id => @id) ,{:class => "button special big" }, type:"button", :method => :post do %>
							Crear<%= image_tag("ic_save_white.png", :class => "iconImage")%>
							<% end %>
						</div>
					</div>
					<% end %>
				</div>
			</section>

			

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->