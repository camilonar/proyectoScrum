<section id="three" class="wrapper style1 special" >
        <div align="center" style="margin:0 auto 0 auto;" class="container 50%">
        <section class="box " style="margin:0 auto 0 auto">


<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
 <div class="form-group hidden_element">
            <%= f.file_field :photo, onchange:"readURL(this);", style:"overflow:hidden;" %>
          </div>
        <div style="text-align:center" >
          <% if @user.photo.exists?%>
              <%= image_tag @user.photo.url ,:class => "profileImage top", :id => "img_prev"%>
            <% else %>
              <%=image_tag("profile_placeholder.png", :class => "profileImage top", :id => "img_prev")%>
          <% end %>
          <div> <br />
            <a onclick="chooseFile()" class="button styleIcon">Subir Logo<%= image_tag("ic_insert_photo_white.png", :class => "iconImage")%></a>  
          </div>
        </div>
     <br>        
  <div class="field">
    <%= f.label :email, "Correo electrónico" %>
    <%= f.email_field :email, autofocus: true %><br />
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :"Nueva Contraseña" , class:" item"%> <i>(´Dejar vacío si no se desea cambiarla)</i>
  <div class="flex-container"><br/>
    <%= f.password_field :password, autocomplete: "off",placeholder:"Contraseña",style:" text-align: center;" ,class:"item" , pattern:".{6,}"%>
     <% if @minimum_password_length %>
       <span class="form_hint">(<%= @minimum_password_length %> caracteres como mínimo)</span>
    <% end %>
     <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Confirmar contraseña" ,style:" text-align: center;" ,class:"item" ,pattern:".{6,}" %>
      <% if @minimum_password_length %>
       <span class="form_hint">(<%= @minimum_password_length %> caracteres como mínimo)</span>
    <% end %>
  </div><em>
  <%= @minimum_password_length %> caracteres como mínimo</em><br /><br />

  <div class="field">
    <%= f.label :current_password, "Contraseña actual" %> <i>(Tu contraseña actual es necesaria para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Contraseña actual" %>
  </div> <br />

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
<hr />
<h3>Cancelar mi cuenta</h3>

<p>¿Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %></p>

<%= link_to "Atrás", :back, class: "button special float_left" %><br />
</section>
  </div>
</section>

