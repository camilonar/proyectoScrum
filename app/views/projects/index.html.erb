		<!-- Main -->
			<section id="main" class="wrapper">
				<header class="major">
					<h2>Proyectos</h2>
				</header>
				<div class="container">
					<div id="botonesProyecto" >	
						<div align="right"><%= link_to "Crear Proyecto" , "/projects/new", class:"button" %><br></div>
						Buscar:<input type="text" name="buscarProyecto" id="buscarProyecto" value="" placeholder="escriba el proyecto">
						<br>
						<br>						
					</div>
					<!-- Table -->
						<section>
						<div class="content2">
							<div class="table-wrapper">
								<table>
									<tbody>									
										<% for proyecto in @proyectos %>
											<tr>
											<div class="row">
												<td>
												<div align="center">
																	  <strong><%= link_to proyecto.proy_nombre, project_details_path(:id => proyecto.id) %></strong><br>								
													  <%= link_to  project_details_path(:id => proyecto.id) do %>
														  <% if proyecto.photo.exists?%>
															 <%= image_tag proyecto.photo.url %>
														  <%else %>
														  	<%= image_tag("logoproyecto.jpg",:class => 'logoImage')%>
														  <% end %>
													  <% end %>
													  <br>
													  <strong>Descripcion: </strong><span><%= proyecto.proy_descripcion%></span> <br>
													  <strong>Estado: </strong><%= proyecto.proy_estado%>
												</div>	
												</td>
						  						<td>
						  						<br><br>
						  						<%= button_to "Editar" ,{:controller => :projects,
						      					:action => 'edit', :id => proyecto.id }, :method => "post" , class:"largePadding"%>
						 						<%= button_to "Eliminar" ,{:controller => :projects,
						      					:action => 'destroy', :id => proyecto.id }, :method => "post" , class:"largePadding"%>
						      					</td>
						      					</div>
											</tr>
										<% end %>	
									</tbody>
								</table>
							</div>
						</div>
								<div align="center">
								<%= will_paginate @proyectos %>
						</div>
						</section>			
			</section>
		<div>
			
		</div>	
