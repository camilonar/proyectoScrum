<section id="one" class="wrapper " style="background-color:#e3e3e9">
	<div class="container contact_form" style="text-align:center">	

	   <header class="major">
	   	<h2>Editar Proyecto</h2>
	   </header>	
	   		<%= form_for :proyecto, :html => { :multipart => true, method: :put } do |f| %>
	   			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	   			 <div class="form-group hidden_element">
		   			<%= f.file_field :photo, onchange:"readURL(this);", style:"overflow:hidden;" %>
	   			</div>
	   			
	   			
					<div align="center" style="margin:0 auto 0 auto;" class="container 50%">
                        <div style="text-align:center" >
							    <% if @proyecto.photo.exists?%>
					              <%= image_tag @proyecto.photo.url ,:class => "logoImage top", :id => "img_prev"%>
					            <% else %>
					              <%=image_tag("logo_proyecto.png", :class => "logoImage top", :id => "img_prev")%>
					          <% end %>
							<div>
							<a onclick="chooseFile()" class="button">Subir Logo<%= image_tag("ic_insert_photo_white.png", :class => "iconImage")%></a>	
							</div>
						 </div>
						 <br>
						 <%= f.text_field :proy_nombre, autofocus: true ,placeholder:"Nombre Proyecto " ,:required => true, style:"background-color:white;" , class:"item" %>
										<br>
						<%= f.text_area :proy_descripcion, rows:9, autofocus: true ,placeholder:"Descripcion " ,:required => true, style:"background-color:white;" , class:"item" %>
						<br>	
						<div class=" flex-container" >
						<%= f.text_field :proy_fechainicio, placeholder:"Fecha de inicio", :required => true, style:"background-color:white;", class:"item datepicker" %>
						<p style="padding: 13px;">hasta</p> 
						<%= f.text_field :proy_fechafinalizacion, placeholder:"Fecha de finalizacion", :required => true, style:"background-color:white;", class:"item datepicker" %>
						</div>	 	    
							<%lista1=["Abierto","Cerrado"]%>
							<%=f.label :proy_estado, "Estado: "%> <%=f.select :proy_estado, lista1, :required => true, style:"width: 50%;"%>
					</div>	

					<div hidden class="6u 12u$(4)">
									<ul class="actions fit small">
										<li><h2>Equipo inicial</h2></li>
										
									    <li><div align="right"><%= link_to "Editar equipo" , "/miembros/registrar", class:"button" %><br></div> </li>

									</ul>
						
							
								   <div style="width:100%; height:450px; overflow:auto;">
								     <table cellspacing="0" cellpadding="1" border="1" width="300" >
								     <% 7.times do  %>
								       <tr>
								       		<td>
								              <div class="row">
													<%=image_tag("profile_placeholder.png")%>
													<h4> jhon</h4>
													<p>Doe</p>
												</div>
											<td>
								       </tr>
								       <% end %>
								     </table>  
								  </div>
			  
		</div>
            <br>
			<div class="actions">	
    			<%= button_tag("Guardar", :class => "button special big styleIcon") do %>
    			Guardar<%= image_tag("ic_save_white.png", :class => "iconImage")%>
    			<% end %>
  			</div>
		<%end %>
	</div>
				
</section>
